<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp">

    <ImageButton
        android:id="@+id/btnBackDetail"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_circle_green"
        android:src="@drawable/ic_arrow_back"
        app:tint="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tvTitleScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ticket de Entrega"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@+id/btnBackDetail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnBackDetail" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        app:cardBackgroundColor="#F5F5F5"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toTopOf="@+id/btnPrimary"
        app:layout_constraintTop_toBottomOf="@+id/btnBackDetail">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvTicketCodeDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#TCK-82391"
                android:textColor="#616161"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/divider1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="#E0E0E0"
                app:layout_constraintTop_toBottomOf="@+id/tvTicketCodeDetail" />

            <ImageView
                android:id="@+id/imgClient"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/bg_circle_gray"
                app:layout_constraintEnd_toStartOf="@+id/imgArrow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider1" />

            <TextView
                android:id="@+id/tvClientName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tú (Cliente)"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:textColor="#4CAF50"
                app:layout_constraintEnd_toEndOf="@+id/imgClient"
                app:layout_constraintStart_toStartOf="@+id/imgClient"
                app:layout_constraintTop_toBottomOf="@+id/imgClient" />

            <ImageView
                android:id="@+id/imgArrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_media_play"
                android:rotation="0"
                app:tint="#9E9E9E"
                app:layout_constraintBottom_toBottomOf="@+id/imgClient"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imgClient" />
            <ImageView
                android:id="@+id/imgSeller"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/bg_circle_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imgArrow"
                app:layout_constraintTop_toBottomOf="@+id/divider1" />

            <TextView
                android:id="@+id/tvSellerNameDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vendedor"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:textColor="#4CAF50"
                app:layout_constraintEnd_toEndOf="@+id/imgSeller"
                app:layout_constraintStart_toStartOf="@+id/imgSeller"
                app:layout_constraintTop_toBottomOf="@+id/imgSeller" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="24dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvClientName">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp">

                    <LinearLayout
                        android:id="@+id/layoutProductList"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="visible"> <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Producto"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Cant."
                            android:gravity="center"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="Precio"
                            android:gravity="end"
                            android:textStyle="bold"/>
                    </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvProductsDetail"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            tools:listitem="@layout/item_ticket_product_detail"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:layout_marginTop="12dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:layout_marginEnd="16dp"/>
                            <TextView
                                android:id="@+id/tvTotalDetail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="S/. 0.00"
                                android:textSize="16sp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutNegotiationForm"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="gone"> <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Punto de entrega:"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp"/>

                        <EditText
                            android:id="@+id/etDeliveryPoint"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_status_outline"
                            android:hint="Escoge una ubicación"
                            android:padding="12dp"
                            android:textSize="14sp"
                            android:layout_marginBottom="16dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fecha de entrega:"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:id="@+id/tvDeliveryDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_status_outline"
                            android:hint="Escoge la fecha y hora"
                            android:padding="12dp"
                            android:textSize="14sp"
                            android:drawablePadding="8dp"
                            app:drawableStartCompat="@android:drawable/ic_menu_my_calendar"
                            android:layout_marginBottom="16dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total:"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/tvTotalNegotiation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="S/. 999.99"
                            android:textSize="16sp"
                            android:layout_marginBottom="16dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Detalle del pedido"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnViewDetails"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:text="Ver detalles"
                            android:textSize="12sp"
                            android:paddingVertical="0dp"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:textColor="#388E3C"
                            app:strokeColor="#388E3C"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Estado del Ticket:"
                            android:textStyle="bold"
                            android:layout_marginTop="12dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Negociando"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp"
                            android:background="@drawable/bg_circle_gray"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"/>

                    </LinearLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layoutDeliveryInfo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"> <TextView
                        android:id="@+id/lblDeliveryPoint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Punto de entrega:"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                        <TextView
                            android:id="@+id/tvDeliveryPointInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Plaza de Armas"
                            android:paddingTop="4dp"
                            app:layout_constraintTop_toBottomOf="@+id/lblDeliveryPoint"/>

                        <TextView
                            android:id="@+id/lblDeliveryDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fecha de entrega:"
                            android:textStyle="bold"
                            android:layout_marginTop="16dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvDeliveryPointInfo"/>

                        <TextView
                            android:id="@+id/tvDeliveryDateInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="12 Oct 2025 - 18:00pm"
                            android:paddingTop="4dp"
                            app:layout_constraintTop_toBottomOf="@+id/lblDeliveryDate"/>

                        <ImageView
                            android:id="@+id/ivQrCode"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/ic_launcher_background"
                            android:scaleType="centerCrop"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvDeliveryDateInfo"
                            android:layout_marginTop="8dp"/>
                        <TextView
                            android:id="@+id/tvVerificationCode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Código:\n12345"
                            android:gravity="center"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="@+id/ivQrCode"
                            app:layout_constraintStart_toStartOf="@+id/ivQrCode"
                            app:layout_constraintTop_toBottomOf="@+id/ivQrCode" />

                        <TextView
                            android:id="@+id/lblOrderDetails"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Detalle del pedido"
                            android:textStyle="bold"
                            android:layout_marginTop="16dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvDeliveryDateInfo"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnViewDetailsInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:text="Ver detalles"
                            android:textSize="10sp"
                            android:paddingVertical="0dp"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:textColor="#388E3C"
                            app:strokeColor="#388E3C"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/lblOrderDetails"/>

                        <TextView
                            android:id="@+id/lblTotalInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total:"
                            android:textStyle="bold"
                            android:layout_marginTop="12dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/btnViewDetailsInfo"/>

                        <TextView
                            android:id="@+id/tvTotalInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="S/. 99.99"
                            android:textSize="16sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/lblTotalInfo"/>

                        <TextView
                            android:id="@+id/lblStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Estado del Ticket:"
                            android:textStyle="bold"
                            android:layout_marginTop="12dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvTotalInfo"/>

                        <TextView
                            android:id="@+id/tvStatusBadge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="En Proceso"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="4dp"
                            android:background="@drawable/bg_status_outline"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/lblStatus"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </FrameLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPrimary"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:text="Solicitar"
        android:textColor="#388E3C"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        app:strokeColor="#388E3C"
        app:strokeWidth="1dp"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnSecondary"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSecondary"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:text="Eliminar"
        android:textColor="#D32F2F"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        app:strokeColor="#D32F2F"
        app:strokeWidth="1dp"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnPrimary" />

</androidx.constraintlayout.widget.ConstraintLayout>