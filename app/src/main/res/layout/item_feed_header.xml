<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <ImageView
            android:id="@+id/iv_business_profile"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_user"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_business_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Nombre del Negocio"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/iv_business_profile"
            app:layout_constraintTop_toTopOf="@+id/iv_business_profile"
            app:layout_constraintEnd_toStartOf="@+id/iv_rating_star"/>

        <ImageView
            android:id="@+id/iv_rating_star"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_star_filled" 
            app:tint="@color/yellow_star"
            app:layout_constraintEnd_toStartOf="@+id/tv_business_rating"
            app:layout_constraintTop_toTopOf="@+id/tv_business_name"
            app:layout_constraintBottom_toBottomOf="@+id/tv_business_name"/>

        <TextView
            android:id="@+id/tv_business_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="5.0"
            android:textColor="@android:color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_business_name"
            app:layout_constraintBottom_toBottomOf="@+id/tv_business_name"/>

        <TextView
            android:id="@+id/tv_business_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Dirección del negocio"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/tv_business_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_business_name"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_business_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:background="@drawable/bg_status_pill"
            android:text="Categoría"
            android:textColor="@color/primary_color"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@id/tv_business_address"
            app:layout_constraintTop_toBottomOf="@+id/tv_business_address" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>