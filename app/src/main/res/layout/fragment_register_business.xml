<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="32dp"
        android:paddingTop="40dp"
        android:paddingBottom="24dp">

        <!-- Back button -->
        <ImageView
            android:id="@+id/btnBackBusiness"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_circle_green"
            android:src="@drawable/ic_arrow_back"
            android:padding="8dp"
            android:tint="@color/white"
            android:layout_marginBottom="16dp" />

        <!-- Title -->
        <TextView
            android:id="@+id/tvBusinessTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registro"
            android:fontFamily="sans-serif-black"
            android:textSize="28sp"
            android:textStyle="bold"
            android:letterSpacing="-0.02"
            android:textColor="@color/black"
            android:layout_marginBottom="24dp" />

        <!-- Nombre del negocio -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del negocio"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="6dp"/>

        <EditText
            android:id="@+id/etBusinessName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_input_field"
            android:backgroundTint="#F5F5F5"
            android:paddingHorizontal="12dp"
            android:hint="Ingrese nombre"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginBottom="16dp" />

        <!-- RUC (solo para verificado) -->
        <LinearLayout
            android:id="@+id/layoutRuc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RUC del negocio *"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="13sp"
                android:layout_marginBottom="6dp"/>

            <EditText
                android:id="@+id/etRuc"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_input_field"
                android:backgroundTint="#F5F5F5"
                android:paddingHorizontal="12dp"
                android:hint="Ingrese RUC"
                android:inputType="number"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginBottom="16dp"/>
        </LinearLayout>

        <!-- Categoría -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categoría del negocio"
            android:textStyle="bold"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:layout_marginBottom="6dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_input_field"
            android:backgroundTint="#F5F5F5"
            android:paddingHorizontal="4dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <Spinner
                android:id="@+id/spBusinessCategory"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:spinnerMode="dropdown"/>
        </LinearLayout>

        <!-- UBICACIÓN DEL NEGOCIO (MAPA) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ubicación del negocio"
            android:textStyle="bold"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:layout_marginBottom="6dp"/>

        <LinearLayout
            android:id="@+id/btnSelectBusinessLocation"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_input_field"
            android:backgroundTint="#F5F5F5"
            android:gravity="center_vertical"
            android:paddingHorizontal="12dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_location"
                android:tint="#9E9E9E"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/tvBusinessLocationSelected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seleccionar ubicación en el mapa"
                android:textColor="#9E9E9E"
                android:textSize="14sp"/>
        </LinearLayout>

        <!-- Descripción -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripción"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:layout_marginBottom="6dp"/>

        <EditText
            android:id="@+id/etBusinessDescription"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="top"
            android:background="@drawable/bg_input_field"
            android:backgroundTint="#F5F5F5"
            android:padding="12dp"
            android:hint="Escriba una descripción..."
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginBottom="32dp"/>

        <!-- Botón Siguiente -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBusinessNext"
            android:layout_width="280dp"
            android:layout_height="52dp"
            android:layout_gravity="center_horizontal"
            android:text="Siguiente"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            app:cornerRadius="10dp"
            app:backgroundTint="@color/primary_color"/>

    </LinearLayout>

</ScrollView>
